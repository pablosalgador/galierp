{% extends 'admin.html.twig' %}
{% block content %}
{% for msg in msg_success %}
<div class="alert alert-success border-bottom-success font-weight-bold"><i class="fa fa-check fa-fw"></i> &nbsp;{{msg}}</div>
{% endfor %}
{% for msg in msg_error %}
<div class="alert alert-danger border-bottom-danger font-weight-bold"><i class="fa fa-check fa-fw"></i> &nbsp;{{msg}}</div>
{% endfor %}
<h1 class="h1 mb-2 font-weight-bold text-gray-800"><i class="fas fa-fw fa-key"></i> &nbsp;{% trans %}Cambiar Contraseña{% endtrans %}</h1>
<hr/>
<div class="card shadow ">
  <div class="card-body">
    <form method="POST">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="password1"><i class="fas fa-fw fa-key"></i> &nbsp;Contraseña Nueva</label>
            <input type="password" name="password1" id="password1" class="form-control">
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label for="password1"><i class="fas fa-fw fa-key"></i> &nbsp;Repetir Contraseña</label>
            <input type="password" name="password2" id="password2" class="form-control">
          </div>
        </div>
        <div class="col-md-6">
          <input type="submit" value="Guardar" class="btn btn-primary btn-block">
        </div>
        <div class="col-md-6">
          <a href="{{path("dashboard")}}" class="btn btn-danger btn-block">Cancelar</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
